{
    "name": "lerna",
    "version": "1.0.0",
    "description": "Coming Soon",
    "main": "index.js",
    "scripts": {
        "start:frontend": "cd frontend && npm start",
        "start:backend": "cd backend && npm run start:dev",
        "lint:backend": "cd backend && npm run lint",
        "lint:frontend": "cd frontend && npm run lint",
        "test:backend": "cd backend && npm run test",
        "test:frontend": "cd frontend && npm run test",
        "prettify:frontend": "prettier --write \"frontend/src/**/*.{ts,tsx}\"",
        "prettify:backend": "prettier --write \"backend/src/**/*.ts\"",
        "server:admin": "cd frontend/public && http-server --port=3001",
        "start": "concurrently \"npm run start:frontend\" \"npm run start:backend\"",
        "test": "concurrently \"npm run test:frontend\" \"npm run test:backend\"",
        "lint": "concurrently \"npm run lint:frontend\" \"npm run lint:backend\""
    },
    "devDependencies": {
        "concurrently": "^4.1.0",
        "http-server": "^0.12.3",
        "husky": "^3.1.0",
        "lint-staged": "^9.2.5",
        "prettier": "^1.18.2"
    },
    "repository": {
        "type": "git",
        "url": "git@turing.github.com:thrownullexception/lerna"
    },
    "keywords": [],
    "author": "Akingbade Ayobami",
    "license": "ISC",
    "lint-staged": {
        "backend/**/*.ts": [
            "npm run prettify:backend",
            "npm run lint:backend",
            "git add"
        ],
        "frontend/**/*.{ts,tsx}": [
            "npm run prettify:frontend",
            "npm run lint:frontend",
            "git add"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    }
}
